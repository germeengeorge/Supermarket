@model ProductVM
@{
    SelectList Cat = new SelectList(ViewBag.Categories, "id", "Name");
}

<div class="card border-0 mt-4">
    <div class="card-header bg-body bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-start">
                <h2 class="text-dark py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
             <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-1" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-1" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="price" class="form-control border-1" />
                    <label asp-for="price" class="ms-2"></label>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select class="form form-control"
                            asp-items="Cat" asp-for="CategoryId">
                        <option value="0">--Select category--</option>
                    </select>
                    <label asp-for="CategoryId" class="ms-2"></label>
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>
                    <input asp-for="ProductImage" class="form-control" accept="image/*" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}