@model List<OrderHeader>

<div class="card  border-0 mt-3">
     <div class="card-header bg-body bg-gradient ml-2 py-3">
        <div class="row">
            <div class="col-12 text-start">
                <h2 class="text-dark py-1">Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        User Id
                    </th>
                    <th>
                        User Name
                    </th>
                    <th>
                        User Phone
                    </th>
                    <th>
                        Payment Id
                    </th>
                    <th>
                        Payment Date
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Order Total Price
                    </th>
                    <th>
                        Order Detials
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderByDescending(h => h.OrderTotal))
                {
                    <tr>
                        <td>@obj.ApplicationUserId</td>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Phone
                        </td>
                        <td>
                            @obj.PaymentIntentId
                        </td>
                        <td>
                            @obj.PaymentDate
                        </td>
                        <td>
                            @obj.OrderDate
                        </td>
                        <td>
                            @obj.OrderTotal.ToString("c")
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a href="#" @* asp-action="Details" asp-route-id="@obj.Id" *@ class="btn btn-outline-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
 </div> 